<div class="container">
    <div class="col-5 alert alert-danger" role="alert">
        [!] Please, fill in the required fields marked with *
    </div>
    <form id="registerForm">
        <div class="row">
            <div class="col-6">
                <div class="row mb-3">
                    <label for="name" class="col-3 col-form-label"><b class="must">*</b>Name</label>
                    <div class="col-9">
                        <input type="text" class="form-control" name="name" id="name" placeholder="Harvey" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="contact" class="col-3 col-form-label"><b class="must">*</b>Contact</label>
                    <div class="col-9">
                        <div class="input-group">
                            <input type="number" aria-label="contact1" class="form-control" name="contact1"
                                placeholder="010" required>
                            <input type="number" aria-label="contact2" class="form-control" name="contact2"
                                placeholder="1234" required>
                            <input type="number" aria-label="contact3" class="form-control" name="contact3"
                                placeholder="5678" required>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="address1" class="col-3 col-form-label"><b class="must">*</b>Address1</label>
                    <div class="col-9">
                        <div class="input-group">
                            <input type="text" class="form-control" name="address1"
                                placeholder="click!! search button -->" readonly>
                            <button class="btn btn-outline-secondary" type="button" id="btnSearch">Search</button>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="address2" class="col-3 col-form-label"><b class="must">*</b>Address2</label>
                    <div class="col-9">
                        <div class="row">
                            <div class="col-3">
                                <input type="text" class="form-control" name="zipCode" placeholder="Zip Code" readonly>
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" name="address2" placeholder="Detail Address"
                                    required>
                            </div>
                        </div>
                    </div>
                </div>
                <fieldset>
                    <div class="row mb-3">
                        <legend class="col-form-label col-3 pt-0"><b class="must">*</b>Gender</legend>
                        <div class="col-sm-8">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="gender1" value="option1"
                                    required>
                                <label class="form-check-label" for="gender1">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="gender2" value="option2"
                                    required>
                                <label class="form-check-label" for="gender2">
                                    Female
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="row mb-3">
                    <label for="birthday" class="col-3 col-form-label"><b class="must">*</b>Birthday</label>
                    <div class="col-9">
                        <div class="input-group">
                            <select class="form-select form-select" name="birthYear" required>
                                <option selected>Year</option>
                            </select>
                            <select class="form-select form-select" name="birthMonth" required>
                                <option selected>Month</option>
                            </select>
                            <select class="form-select form-select" name="birthDay" required>
                                <option selected>Day</option>
                            </select>
                        </div>
                    </div>
                </div>
                <fieldset>
                    <div class="row mb-3">
                        <legend class="col-form-label col-3 pt-0"><b class="must">*</b>Marital Status</legend>
                        <div class="col-9">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="maritalStatus" id="maritalStatus1"
                                    value="option1" required>
                                <label class="form-check-label" for="maritalStatus1">
                                    Single
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="maritalStatus" id="maritalStatus2"
                                    value="option2" required>
                                <label class="form-check-label" for="maritalStatus2">
                                    Together
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="row mb-3">
                    <label for="joinDate" class="col-3 col-form-label">
                        <b class="must">*</b>Join Date
                    </label>
                    <div class="col-9">
                        <div class="input-group">
                            <select class="form-select form-select" name="joinYear" required>
                                <option selected>Year</option>
                            </select>
                            <select class="form-select form-select" name="joinMonth" required>
                                <option selected>Month</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row md-3">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="row mb-3">
                    <label for="email" class="col-3 col-form-label">Email</label>
                    <div class="col-9">
                        <input type="text" class="form-control" name="email" id="email" placeholder="harvey@gmail.com">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="job" class="col-3 col-form-label">Job</label>
                    <div class="col-9">
                        <input type="text" class="form-control" name="job" id="job" placeholder="Software Developer">
                    </div>
                </div>
                <fieldset>
                    <div class="row mb-3">
                        <legend class="col-form-label col-3 pt-0">Baptism</legend>
                        <div class="col-9">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="baptism" id="baptism1"
                                    value="option1">
                                <label class="form-check-label" for="baptism1">
                                    Done
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="baptism" id="baptism2"
                                    value="option2">
                                <label class="form-check-label" for="baptism2">
                                    Not Yet
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="row mb-3">
                    <label for="group" class="col-3 col-form-label">Group</label>
                    <div class="col-9">
                        <select class="form-select form-select" id="group">
                            <option selected>...</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="role" class="col-3 col-form-label">Role</label>
                    <div class="col-9">
                        <select class="form-select form-select" id="role">
                            <option selected>...</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="role" class="col-3 col-form-label">Service</label>
                    <div class="col-9">
                        <select class="form-select form-select" id="service">
                            <option selected>...</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="role" class="col-3 col-form-label">Attendance</label>
                    <div class="col-9">
                        <select class="form-select form-select" id="attendance">
                            <option selected>...</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="image" class="col-3 col-form-label">Image</label>
                    <div class="col-9">
                        <div class="input-group">
                            <input type="file" class="form-control" name="image"
                                accept="image/x-png, image/gif, image/jpeg">
                            <button class="btn btn-outline-secondary" type="button" name="delete">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="addressLayer"></div>

<!-- Daum Post Code API -->
<script src="https://t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
