<style>
    body {
        background-color: #1976d2;
    }
    .flex_container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        height: 100%;
    }
    #divLogin {
        background-color: #ffffff;
        color: #666666;
        min-width: 300px;
        max-width: 300px;
    }
    .btn-primary {
        background-color: #1976d2 !important;
        border-color: #1976d2;
    }
    .btn-primary:hover {
        background-color: #1566b7 !important;
        border-color: #1566b7;
    }
</style>

<div class="flex_container">
    <div id="divLogin" class="row">
        <div class="col border">
            <h2 class="text-center pt-3">Login</h2>
            <form id="loginForm">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="col-form-label">phone number</label>
                            <input type="number" class="form-control" name="contact" maxlength="11" oninput="maxLengthCheck(this)" />
                            <label class="col-form-label">password</label>
                            <input type="password" class="form-control" name="password" />
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary btn-block" type="button" id="btnLogin">Login</button>
                    </div>
                    <% if(flashMessages){ %> <% if(flashMessages.failureFlash){ %>
                    <div class="col pt-3">
                        <div class="alert alert-danger">
                            <strong> <%= flashMessages.failureFlash %> </strong>
                        </div>
                    </div>
                    <% } %> <% } %>
                </div>
                <div class="row">
                    <div class="col pt-3">
                        <p style="text-align: end">Forgot <a href="#">password?</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("btnLogin").addEventListener("click", login);

    function login() {
        const loginForm = document.getElementById("loginForm");

        // check required fields
        if (!loginForm.contact.value) {
            alert("Please, fill phone number");
            return false;
        }
        if (!loginForm.password.value) {
            alert("Please, fill password");
            return false;
        }

        const param = {
            contact: loginForm.contact.value,
            password: loginForm.password.value,
        };

        fetch("/login", {
            headers: { "Content-Type": "application/json" },
            method: "POST",
            body: JSON.stringify(param),
        })
            .then(response => {
                if (!response.ok) {
                    new Error(response.status);
                }
                if (response.redirected) {
                    location.href = response.url;
                }
            })
            .catch(error => {
                console.error(error);
            });
    }

    function maxLengthCheck(object) {
        if (object.value.length > object.maxLength) {
            object.value = object.value.slice(0, object.maxLength);
        }
    }
</script>
